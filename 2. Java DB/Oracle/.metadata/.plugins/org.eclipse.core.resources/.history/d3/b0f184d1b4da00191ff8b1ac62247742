package mov.com.action;

import java.util.Scanner;

public class ViewAction implements Action{
	
	@Override
	public void execute(Scanner sc) {
		/*
		 *  영화 개별 정보를 불러오는 액션
		 *  1. 검색 대상의 영화 id를 불러온다
		 */
		
		ConsoleUtils cu = new ConsoleUtils();
		String id = cu.getID(sc, "검색");
		
		// 불러온 id를 서비스 객체로 보낸다
		ViewService viewsvc = new ViewService();
		MovieDTO dto = viewsvc.getMovie();
		
		// 서비스 객체가 MovieDTO의 객체를 가져왔을 때 이게 있다면 출력하고 없다면 에러메시지
		
		if (dto == null) 
			cu.view(dto);
		else {
			System.out.println("영화 검색에 실패했습니다.");
			return;
		}
	}
}
